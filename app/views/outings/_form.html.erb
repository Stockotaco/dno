<%= form_for(@outing) do |f| %>
  <% if @outing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@outing.errors.count, "error") %> prohibited this outing from being saved:</h2>

      <ul>
      <% @outing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :rating %><br />
    <%= f.number_field :rating %>
  </div>
  <div>
  	<fieldset>
  		<legend>Activities</legend>
  		<ul>
  		<% @activities.each do |activity|  %>
  			<li>
  				<%= render "activity_select", :outing => @outing, :activity => activity %>
  			</li>
  		<% end %>
  		</ul>
  	</fieldset>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
